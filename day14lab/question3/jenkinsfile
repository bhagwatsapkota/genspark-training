pipeline {
    agent any

    stages {

        stage('Checkout repository') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/bhagwatsapkota/genspark-training.git']]])
            }
        }
        stage ('Terrafrom get') {
            steps {
                bat "terraform get -update=true"
            }
        }
        stage('Terraform init') {
            steps {
                bat "terraform init"
            }
        }
        stage('Terraform plan') {
            steps {
                bat "terrafrom plan -input=false -out tfplan"
                bat "terrafrom show tfplan > tfplan.txt"
            }
        }
        stage('Terrafrom apply') {
            steps {
                bat "terrafrom apply -lock=false -input=false tfplan --auto-approve"
            }
        }
    }
}